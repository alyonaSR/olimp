#include <iostream>
#include <vector>
#include <algorithm>
#include <cstring>
 
using namespace std;
 
using ll = long long;
ll n, w;
vector<pair<ll, ll>> q;
 
//ll used[22];
int used, e;
ll ans_k = 21, ans_sum = 0;

void f(ll cnt , ll k, ll sum){
    if (cnt <= w){
        if (sum > ans_sum || (sum == ans_sum && k < ans_k)){
            ans_sum = sum;
            ans_k = k;
            e = used;
        }
    }
    if (cnt > w){
        return;
    }
    for(int i = 0; i < n; i++){
        if (((used >> i) & 1) == 0){
            used += (1 << i);
            f(cnt + q[i].first, k + 1, sum + q[i].second);
            used -= (1 << i);
        }
    }
}
 
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
     
    cin >> n >> w;
     
    for(int i = 0; i < n; i++){
        int a, b;
        cin >> a >> b;
        q.push_back(make_pair(a, b));
    }
    
    f(0, 0, 0);
    cout << ans_k << " " << ans_sum << endl;
    for(int i = 0; i < 20; i++){
        if (((e >> i) & 1) == 1) {
            cout << i + 1 << " ";
        }
    }
    return 0;
}
