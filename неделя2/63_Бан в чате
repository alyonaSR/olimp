#include <iostream>
#include <vector>

using namespace std;

long long bin(long long k, long long x){
    long long l = 0, r = 2 * k - 1;
    long long res = 2 * k - 1;
    while(r > l + 1){
        long long mid = (l + r) / 2;
        if(mid <= k){
            if (mid % 2 == 0){
                res = ((2 + mid - 1) / 2) * (mid + 1);
            }
            else {
                res = ((2 + mid - 1) / 2) * mid;
            }
        }
        else {
            if (mid % 2 == 0){
                res = ((2 + k - 1) / 2) * (k + 1) + ((2 * (k - 1) - mid + 1) / 2 * (mid + 1));
            }
            else {
                res = ((2 + k - 1) / 2) * k + ((2 * (k - 1) - mid + 1) / 2 * mid);
            }
        }
       if (res >= x){
            r = mid;
        }
        else{
            l = mid;
        }
    }
    return r;
}

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    int t;
    cin >> t;
    for(int q = 0; q < t; q++){
        long long k, x;
        cin >> k >> x;
        cout << bin(k, x) << "\n";
    }
    return 0;
}
