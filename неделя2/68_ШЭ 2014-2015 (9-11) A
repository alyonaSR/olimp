#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;

using ll = long long;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    
    int n;
    cin >> n;
    
    if(n % 2 == 0){
        cout << n + 1 << "\n";
    }
    else{
        cout << n - 1 << "\n";
    }

    return 0;
}
